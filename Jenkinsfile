pipeline {
  agent none 
    stages {
      stage('Test') {
        steps {
          script {
            echo 'testing the application'
          }
        }
      }
      stage('Build') {
        steps {
          script {
            echo 'building the application'
          }
        }
      }
      stage('Deploy') {
        steps {
          script {
            echo 'deploying the application'
          }
        }
      }
    }
}
      
          
